<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">


    <RelativeLayout

        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padd_10">

        <ImageView
            android:src="@drawable/notification_green"
            android:id="@+id/thumbnail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/activity_padding_horizontal"
            android:scaleType="centerCrop" />

        <TextView

            android:text="New Session Registration"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/thumbnail"
            android:ellipsize="end"

            android:maxLines="1"
            android:textColor="@color/item_name"
            android:textSize="17dp" />


    </RelativeLayout>
    <View
        android:layout_below="@id/view_foreground"
        android:background="#A8FBAC"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>

</RelativeLayout>