<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SplashScreen">



    <RelativeLayout
        android:background="@drawable/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>
    <ImageView

        android:src="@drawable/logo"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/welcometxt"
        android:layout_width="120dp"
        android:layout_height="120dp"></ImageView>
    <TextView
        android:id="@+id/welcometxt"
        android:textSize="22dp"
        android:gravity="center"
        android:text="WELCOME TO PSRA"
        android:textStyle="bold"
        android:layout_marginBottom="25dp"
        android:layout_above="@id/intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>
    <TextView
        android:id="@+id/intro"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:text="We can ensure you that you will get the best educational service from us"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/getstarted"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></TextView>

    <LinearLayout

        android:onClick="getStarted"
        android:weightSum="2"
        android:gravity="center"
        android:orientation="horizontal"
        android:drawableRight="@drawable/arrow"
        android:id="@+id/getstarted"

        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/buttonstyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="20dp"
            android:layout_weight=".3"
            android:layout_gravity="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="Get Started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>

        <ImageView
            android:layout_weight="1.7"
            android:layout_marginRight="@dimen/page_border"
            android:src="@drawable/arrow"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>

    </LinearLayout>
</RelativeLayout>